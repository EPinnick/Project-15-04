<%- include ('../partials/header') %>
<!-- include other stylesheet -->
<link rel="stylesheet" href="/style/login.css">
<style>
  body {
    background-image: url('https://images.unsplash.com/photo-1485095329183-d0797cdc5676?q=80&w=3870&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
    background-position: center;
    background-repeat: no-repeat;
  }
</style>

<main>
  <div class="loginWrapper">
        <!-- Start of Registration Form -->
        <h1>Login</h1>
        <form action="/login" method="POST">
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" name="username" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>
          <hr>
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <p>Already have an account? <a href="/register">Register</a></p>
            </div>
            <div>
              <button type="submit" class="btn btn-primary">Login</button>
            </div>
          </div>
        </form>
        <!-- End of Registration Form -->
  </div>
</main>


<%- include ('../partials/footer') %>